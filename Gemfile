source 'https://rubygems.org'

gem 'rails', '3.2.14'

gem 'pg'
gem 'thin'

gem 'bcrypt-ruby'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'uglifier', '>= 1.0.3'
end

group :development do
  gem 'sextant'
end

group :development, :test do
  gem 'rspec-rails'
  gem 'capybara-rails'
  gem 'selenium-webdriver'
end

gem 'jquery-rails'

gem 'debugger'
